                            int id = (int)Session["UserId"];
                            var aaa = _context.AddressUsers.Where(c => c.UserId == id);
                            var aaaa = _context.AddressUsers.Find(aaa);


                                        @aaaa.Address1

                        }*@
                    @Model.Address1;
                </td>
            </tr>


        </tbody>

    </table>


    <button type="submit" class="btn btn-group-sm btn-success">Confirm Your Order</button>
}

